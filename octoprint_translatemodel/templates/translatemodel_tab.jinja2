<h1>Translate Model</h1>

<div class="row-fluid">
    <input type="text" id="disabledTextInput" disabled class="span12 pull-left" placeholder="Select a file in the file pane" data-bind="value: translateFile">
</div>
<div class="row-fluid">
    <div class="input-prepend input-append span6">
        <span class="add-on">X:</span>
        <input type="number" data-bind="value: xShift" placeholder="0.0" step=0.001>
        <span class="add-on">mm</span>
    </div>
    <div class="input-prepend input-append span6">
        <span class="add-on">Y:</span>
        <input type="number" data-bind="value: yShift" placeholder="0.0" step=0.001>
        <span class="add-on">mm</span>
    </div>
</div>
<form class=".inline-form">
    <label class="radio inline">
        <input type="radio" data-bind="checked: afterTranslate" id="doNothingRadio" value="nothing" checked> Do Nothing
    </label>
    <label class="radio inline">
        <input type="radio" data-bind="checked: afterTranslate" id="loadRadio" value="load"> Load
    </label>
    <label class="radio inline">
        <input type="radio" data-bind="checked: afterTranslate" id="printRadio" value="print"> Print
    </label>
    <label class="radio inline">
        <input type="radio" data-bind="checked: afterTranslate" id="printAndDeleteRadio" value="printAndDelete"> Print and Delete
    </label>
</form>

<div class="row-fluid">
    <button title="Translate" class="btn btn-primary span1 pull-right" data-bind="click: translate, enable: loginState.hasPermissionKo(access.permissions.FILES_UPLOAD) && translateFile() !== '' ">
        <i class="fa fa-arrows-alt"></i>
    </button>
</div>
